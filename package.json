{
  "name": "@plandek-utils/ts-parse-dayjs",
  "version": "4.7.3",
  "author": "Eduardo Turi√±o <eturino@plandek.com>",
  "description": "utils to parse Dayjs objects in UTC",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/plandek-utils/ts-parse-dayjs",
  "homepage": "https://github.com/plandek-utils/ts-parse-dayjs",
  "bugs": "https://github.com/plandek-utils/ts-parse-dayjs/issues",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "type-check": "tsc --noEmit",
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:main build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint \"src/**/*.ts\" --fix",
    "test": "run-s build test:eslint test:unit",
    "test:eslint": "eslint \"src/**/*.ts\"",
    "test:unit": "jest --coverage",
    "cov": "run-s build cov:html && open-cli coverage/index.html",
    "cov:html": "jest --coverage --config=\"jest.html.config.js\"",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc --theme default src/index.ts --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/index.ts --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx -e .idea && git reset --hard && yarn",
    "clean": "trash build test",
    "prepare-release": "run-s reset test doc:html version doc:publish"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files (except `.idea`) and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "gh-pages": "^6.1.1",
    "inquirer": "^9.2.17",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "standard-version": "^9.5.0",
    "timekeeper": "^2.3.1",
    "trash-cli": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
